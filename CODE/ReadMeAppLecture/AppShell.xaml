<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ReadMeAppLecture.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ReadMeAppLecture"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True"
    Shell.TabBarBackgroundColor="Black"
    Shell.NavBarIsVisible="False"
    Title="ReadMeAppLecture">
    <TabBar>
        
            <ShellContent Title="Home"
              Icon="home.png"
              ContentTemplate="{DataTemplate local:MainPage}"/>
        
            <ShellContent Title="Library"
              Icon="library.png"
              ContentTemplate="{DataTemplate local:Library}"/>
        
            <ShellContent Title="Settings"
              Icon="settings.png"
              ContentTemplate="{DataTemplate local:Settings}"/>
        
    </TabBar>
</Shell>
